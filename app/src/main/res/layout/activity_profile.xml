<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".activities.ProfileActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hundred_two"
        android:background="@color/grad_dusk_start">

    </RelativeLayout>
    <androidx.cardview.widget.CardView

        android:id="@+id/profile_section"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hundred_two"
        android:layout_marginLeft="@dimen/twenty"
        android:layout_marginRight="@dimen/twenty"
        android:layout_marginTop="@dimen/hundred"
        app:cardCornerRadius="@dimen/ten"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/hundred"
                    android:layout_height="@dimen/hundred"
                    android:src="@drawable/logo"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF141E30"
                    android:layout_margin="@dimen/radius"/>
            </RelativeLayout>
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/image"
                android:layout_marginTop="@dimen/fifteen"
                android:layout_marginRight="@dimen/twenty"
                android:layout_marginLeft="@dimen/twenty"
                android:background="@drawable/divider"/>
            <LinearLayout
                android:layout_below="@+id/divider"
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/seller_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"
                    android:text="@string/app_name"/>
                <TextView
                    android:id="@+id/seller_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/black"
                    android:text="@string/number"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/profile_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profile_section">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/twenty"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_overlay"
                    android:layout_marginLeft="@dimen/ten"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/emaiid"/>
                <TextView
                    android:id="@+id/seller_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginLeft="@dimen/ten"
                    android:textColor="@color/black"
                    android:text="@string/number"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/seven"
                    android:background="@color/black_overlay"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_overlay"
                            android:layout_marginLeft="@dimen/ten"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@string/gender"/>
                        <TextView
                            android:id="@+id/seller_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_marginLeft="@dimen/ten"
                            android:textColor="@color/black"
                            android:text="@string/number"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_overlay"
                            android:layout_marginLeft="@dimen/ten"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@string/marital_status"/>
                        <TextView
                            android:id="@+id/seller_marital_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_marginLeft="@dimen/ten"
                            android:textColor="@color/black"
                            android:text="@string/number"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/seven"
                    android:background="@color/black_overlay"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_section"
                android:layout_marginTop="@dimen/ten"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_overlay"
                    android:layout_marginLeft="@dimen/ten"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/adhar_number"/>
                <TextView
                    android:id="@+id/seller_adhar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginLeft="@dimen/ten"
                    android:textColor="@color/black"
                    android:text="@string/adhar_number"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/seven"
                    android:background="@color/black_overlay"/>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</RelativeLayout>