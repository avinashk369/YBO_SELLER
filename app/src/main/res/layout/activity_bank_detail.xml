<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".activities.BankDetailActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/bank_card"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:cardCornerRadius="@dimen/ten"
        android:layout_margin="@dimen/ten"
        android:layout_below="@+id/toolbar"
        app:cardElevation="5dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/yellow_dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/bank_name_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/seven"
                    android:textColor="@color/white"
                    android:textSize="@dimen/twenty"
                    android:text="@string/bank_name"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/ten">
                <TextView
                    android:id="@+id/account_number_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginLeft="@dimen/ten"
                    android:textColor="@color/white"
                    android:textSize="@dimen/activity_horizontal_margin"
                    android:text="@string/account_number"/>
                <TextView
                    android:id="@+id/account_name_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginLeft="@dimen/ten"
                    android:textColor="@color/white"
                    android:textSize="@dimen/activity_horizontal_margin"
                    android:text="@string/name_on_account"/>
            </LinearLayout>
            <TextView
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/ifsc_code_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginRight="@dimen/ten"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/ten"
                android:text="@string/name_on_account"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/bank_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/twenty"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_overlay"
                    android:layout_marginLeft="@dimen/ten"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/bank_name"/>
                <TextView
                    android:id="@+id/bank_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginLeft="@dimen/ten"
                    android:textColor="@color/black"
                    android:hint="@string/bank_name"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/seven"
                    android:background="@color/black_overlay"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_overlay"
                    android:layout_marginLeft="@dimen/ten"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/account_number"/>
                <TextView
                    android:id="@+id/account_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginLeft="@dimen/ten"
                    android:textColor="@color/black"
                    android:hint="@string/account_number"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/seven"
                    android:background="@color/black_overlay"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_overlay"
                    android:layout_marginLeft="@dimen/ten"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/name_on_account"/>
                <TextView
                    android:id="@+id/account_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginLeft="@dimen/ten"
                    android:textColor="@color/black"
                    android:hint="@string/name_on_account"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/seven"
                    android:background="@color/black_overlay"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_overlay"
                            android:layout_marginLeft="@dimen/ten"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@string/ifsc_code"/>
                        <TextView
                            android:id="@+id/ifsc_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_marginLeft="@dimen/ten"
                            android:textColor="@color/black"
                            android:hint="@string/ifsc_code"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_overlay"
                            android:layout_marginLeft="@dimen/ten"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@string/pan_number"/>
                        <TextView
                            android:id="@+id/pan_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_marginLeft="@dimen/ten"
                            android:textColor="@color/black"
                            android:hint="@string/pan_number"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/seven"
                    android:background="@color/black_overlay"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>